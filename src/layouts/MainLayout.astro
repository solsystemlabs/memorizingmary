---
const { title } = Astro.props;
import Header from '../components/Header.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Ministry Website</title>
    <link rel="stylesheet" href="/styles/tailwind.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="font-sans bg-secondary-50 text-secondary-800">
    <Header />
    <main class="container mx-auto px-4 py-10">
      <slot />
    </main>
    <footer class="bg-secondary-800 text-white py-6 mt-12">
      <div class="container mx-auto px-4 text-center">
        <p>&copy; {new Date().getFullYear()} Ministry Name. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
